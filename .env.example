# Uqudo Admin Portal - Environment Variables
# Copy this file to .env and fill in your actual values

# =====================================================
# BACKEND API CONFIGURATION
# =====================================================

# Server Configuration
NODE_ENV=production
PORT=3000

# Supabase Configuration (REQUIRED)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# JWT Configuration (REQUIRED)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-refresh-token-secret-change-this-too
JWT_REFRESH_EXPIRES_IN=7d

# CORS (Update with your Vercel frontend URL)
CORS_ORIGIN=https://your-frontend.vercel.app,http://localhost:8080

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE_MB=100
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,xls,xlsx,csv

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# =====================================================
# OPTIONAL SERVICES
# =====================================================

# Redis Configuration (for Bull queues - optional)
REDIS_HOST=
REDIS_PORT=6379
REDIS_PASSWORD=

# Email Configuration (for notifications - optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@uqudo.com

# External AML Portal (optional)
AML_PORTAL_BASE_URL=
AML_PORTAL_API_KEY=

# =====================================================
# UQUDO SDK INTEGRATION (for QR-based verification)
# =====================================================

# Uqudo API Credentials (REQUIRED for production SDK flows)
# Get these from Uqudo Dashboard: https://dashboard.uqudo.com
UQUDO_CLIENT_ID=your-uqudo-client-id
UQUDO_CLIENT_SECRET=your-uqudo-client-secret
UQUDO_AUTH_URL=https://auth.uqudo.com/oauth2/token

# QR Verification Configuration
QR_TOKEN_EXPIRY_MINUTES=5
DEFAULT_JOURNEY_ID=your-default-journey-id

# Deep Link Configuration
DEEP_LINK_SCHEME=uqudo
UNIVERSAL_LINK_BASE=https://uqudo.app/verify

# Feature Flags
ENABLE_WORKFLOW_ORCHESTRATOR=true
ENABLE_AUTO_ALERTS=true
ENABLE_BIOMETRIC_DISPLAY=true
ENABLE_DEVICE_ATTESTATION=true

# =====================================================
# FRONTEND CONFIGURATION
# =====================================================

# API URL (will be used by frontend)
# For local development: http://localhost:3000/api
# For production: https://your-api.vercel.app/api
VITE_API_BASE_URL=http://localhost:3000/api
